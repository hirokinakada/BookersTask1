<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
<div>
	<h2 style="color: red">2 errors prohibited this book from begin saved:</h2>
    <ul style="color: red">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<p><%= f.submit 'Update Book' %></p>

<p><%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %></p>

<%end%>
